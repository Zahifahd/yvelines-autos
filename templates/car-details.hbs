<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="car-details.css">

    <title>Détails de la voiture</title>
</head>
<style>
  
body {
    font-family: Arial, sans-serif;
    background-color: #f8f8f8;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 20px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
    text-align: center;
    color: #333;
}

.car-details {
    margin-top: 20px;
}

.car-details p {
    margin: 10px 0;
    font-size: 18px;
}

.car-details img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 20px auto;
    border-radius: 8px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

</style>
<body>
    <div class="container">
        <h1>Détails de la voiture</h1>
        <div class="/car-details">
            <p>Marque : {{car.brand}}</p>
            <p>Modèle : {{car.model}}</p>
            <p>Année : {{car.year}}</p>
            <p>Kilométrage : {{car.mileage}}</p>
            <p>Prix : {{car.price}}</p>
            <p>Description : {{car.description}}</p>
            <p>Nom du contact : {{car.contactName}}</p>
          <img src="/uploads-cars/{{car.carCondition.image}}" alt="Image de la voiture">



        </div>
       <button class="btn-add-favorite" data-carid="{{car._id}}">Ajouter aux favoris</button>

    </div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btnAddFavorite = document.querySelector('.btn-add-favorite');
        if (btnAddFavorite) {
            btnAddFavorite.addEventListener('click', async () => {
                const carId = btnAddFavorite.getAttribute('data-carid');
                try {
                    const response = await fetch(`/add-to-favorites/${carId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        // Ajoutez d'autres données nécessaires ici, comme les tokens d'authentification
                    });
                    if (response.ok) {
                        // Mettez à jour l'interface utilisateur pour indiquer que la voiture a été ajoutée aux favoris
                        btnAddFavorite.innerText = 'Retirer des favoris';
                        // Vous pouvez également ajouter une classe ou changer l'icône pour indiquer que la voiture est dans les favoris
                    } else {
                        console.error('Erreur lors de l\'ajout aux favoris :', response.statusText);
                    }
                } catch (error) {
                    console.error('Erreur lors de l\'ajout aux favoris :', error.message);
                }
            });
        }
    });
</script>

</body>
</html>
